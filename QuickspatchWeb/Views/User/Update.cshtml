@using QuickspatchWeb.Models
@using QuickspatchWeb.Models.User
@model DashboardUserDataViewModel
@{
    Layout = "~/Views/Shared/_LayoutPopup.cshtml";
}

<div ng-controller="updateUserController">
    @Html.Partial("_Shared", Model.SharedViewModel)
</div>

@section FooterActions
{
    @Model.AddFooterAction("Update", "fa-save", FooterActionEnum.Save, "updateUserController")
    @Model.AddFooterAction("Cancel", "fa-close", FooterActionEnum.Cancel, "updateUserController", false)

    @Html.Partial("~/Views/Shared/_FooterActions.cshtml", Model.FooterActions)
}
