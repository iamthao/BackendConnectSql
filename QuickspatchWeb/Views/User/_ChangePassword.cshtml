@using QuickspatchWeb.HtmlHelpers
@{
    Layout = null;
}

<div class="portlet-content" ng-controller="changePasswordController">
    <form class="form-horizontal" role="form" style="width:100%; margin:0;padding: 0">
        <div class="popup-body modal-body">
            <div>
                <div class="form-group">
                    <div class="row">
                        @Html.CustomTextBox("CurrentPassword", "Current password", "User.CurrentPassword", 4, 6, required: true, isPasswordType: true)
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        @Html.CustomTextBox("NewPassword", "New password", "User.NewPassword", 4, 6, required: true, isPasswordType: true)
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        @Html.CustomTextBox("ConfirmNewPassword", "Confirm new password", "User.ConfirmNewPassword", 4, 6, required: true, isPasswordType: true)
                    </div>
                </div>
            </div>
        </div>
    </form>

    <div class="popup-footer">
        <div style="margin-right:5px">
            <a href="javascript:void(0);" ng-click="Save()" class="btn btn-primary float-right">
                <i class="fa fa-save"></i> Save
            </a>
            <a href="javascript:void(0);" ng-click="Cancel()" class="btn btn-default float-right">
                <i class="fa fa-close"></i> Cancel
            </a>
        </div>
    </div>
</div>

<script type="text/javascript">
    function ChangePasswordViewModel() {
        var self = this;
        self.CurrentPassword = "";
        self.NewPassword = "";
        self.ConfirmNewPassword = "";
    }
</script>
