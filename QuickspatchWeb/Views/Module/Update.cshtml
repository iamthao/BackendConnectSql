@using QuickspatchWeb.Models
@using QuickspatchWeb.Models.Module
@model DashboardModuleDataViewModel
@{
    Layout = "~/Views/Shared/_LayoutPopup.cshtml";
}

<div ng-controller="updateModuleController">
    @Html.Partial("_Shared", Model.SharedViewModel)
</div>

@section FooterActions
{
    @Model.AddFooterAction("Update", "fa-save", FooterActionEnum.Save, "updateModuleController")
    @Model.AddFooterAction("Cancel", "fa-close", FooterActionEnum.Cancel, "updateModuleController", false)

    @Html.Partial("~/Views/Shared/_FooterActions.cshtml", Model.FooterActions)
}
