@using QuickspatchWeb.HtmlHelpers
@model QuickspatchWeb.Models.FranchiseeModule.DashboardFranchiseeModuleShareViewModel
<fieldset data-ng-controller="franchiseeModuleShareController" ng-init="shareInit(@Model.FranchiseeId)">
    @Html.CustomTextBox("Name", "Name", "FranchiseeModule.Name", 6, cssClass: "k-input k-state-disabled", isDisabled: true)
    @Html.CustomCheckBox("CheckAll", "Check All", "FranchiseeModule.CheckAll", 4, ngChangeFunction: "CheckAll()")
    <section class="col col-12">
        <div kendo-grid k-options="mainGridOptions" id="franchiseeModuleGrid" style="border: 1px solid #ccc;"></div>
    </section>
</fieldset>

<script type="text/javascript">
    function FranchiseeModuleViewModel()
    {
        var self = this;
        self.Id = @Model.Id;
        self.Name = @Html.Raw(Json.Encode(Model.FranchiseeName));
        self.CheckAll = false;
    }
</script>