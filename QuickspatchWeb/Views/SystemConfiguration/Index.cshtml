@using Framework.DomainModel.ValueObject
@using QuickspatchWeb.Models
@model QuickspatchWeb.Models.SystemConfiguration.DashboardSystemConfigurationIndexViewModel
@{
    Layout = null;
}


<div class="panel panel-table">
    <div class="panel-heading">
        <div class="panel-title-small">Manage Configuration</div>
    </div>

    <div id="system-configuration-controller" ng-controller="systemConfigurationController">
        <div class="col-sm-12">
            <div kendo-grid k-options="systemConfigurationGridOptions" id="configuration-grid"></div>
        </div>
    </div>
</div>
<script type="text/x-kendo-template" id="withdrawButtons">
    <div class="btn-group">
        <button class="btn btn-sm btn-default btn-note-request" title="Update" ng-click="Edit(${ Id });"><i class="fa fa-edit"></i></button>
    </div>
</script>
<script type="text/javascript">
    $(function () {
        $("#system-configuration-controller").css({ 'min-height': $(window).height() - 121 });
    });
</script>