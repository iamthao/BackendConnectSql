@using Framework.DomainModel.ValueObject
@using QuickspatchWeb.Models
@model QuickspatchWeb.Models.SystemConfiguration.DashboardSystemConfigurationDataViewModel
@{
    Layout = "~/Views/Shared/_LayoutPopup.cshtml";
}

<div ng-controller="updateSystemConfigurationController">
    @Html.Partial("_Shared", Model.SharedViewModel)
</div>

@section FooterActions
{
    @Model.AddFooterAction("Update", "fa-save", FooterActionEnum.Save, "updateSystemConfigurationController")
    @Model.AddFooterAction("Cancel", "fa-close", FooterActionEnum.Cancel, "updateSystemConfigurationController", false)
    @Html.Partial("~/Views/Shared/_FooterActions.cshtml", Model.FooterActions)
}
