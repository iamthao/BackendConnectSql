@model QuickspatchWeb.Attributes.QuickspatchHandleErrorInfo
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <title>Error</title>
    
        <style type="text/css">
            body {
                font-family: "Segoe UI Light", "Lucida Grande", Verdana, Arial, Helvetica, sans-serif;
            }

            h3 {
                color: #00B0F0;
                font-size: 1.4em;
                margin: 10px 0 0 0;
            }
        </style>
    </head>
    <body style="padding: 0; margin: 0; width: 100%; height: 100%; background: url('/Content/quickspatch/img/error/bg_error.png') repeat; text-align: center;">
        <img src="@Url.Content("~/Content/quickspatch/img/error/error_unknown.png")" alt="" />
                 @if (Model != null)
                 {
                <center><small><p class="text-error">Error: @Html.Raw(Model.ErrorMessage.Replace(Environment.NewLine, @"<br/>"))</p></small></center>
                 }
    </body>
</html>
