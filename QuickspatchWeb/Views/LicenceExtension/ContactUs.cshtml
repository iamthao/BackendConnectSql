<script type="text/javascript">


        function back() {
            window.location.href = "/LicenceExtension/Package?keyCode=@Model.KeyCode";
        }


        function validateEmail(email) {
            var re = /^(([^<>()\[\]\\.,;:\s@@"]+(\.[^<>()\[\]\\.,;:\s@@"]+)*)|(".+"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            return re.test(email);
        }
        var model = {
            FullName: $('#fname').val(),
            Email: $('#memail').val(),
            Subject: $('#msubject').val(),
            Message: $('#mmessage').val()
        };    

        function sendMessage() {         
            var error = false;          
            if ($('#fname').val() == null || $('#fname').val() == '' || $('#fname').val() == undefined) {
                $('#error-fname').addClass('has-error');
                error = true;
            } else {
                $('#error-fname').removeClass('has-error');
            }

            if ($('#memail').val() == null || $('#memail').val() == '' || $('#memail').val() == undefined) {
                $('#error-memail').addClass('has-error');
                error = true;
            }
            else if (validateEmail($('#memail').val()) == false) {
                $('#error-memail').addClass('has-error');
                error = true;
            }
            else {
                $('#error-memail').removeClass('has-error');
            }

            if ($('#msubject').val() == null || $('#msubject').val() == '' || $('#msubject').val() == undefined) {
                $('#error-msubject').addClass('has-error');
                error = true;
            }
            else {
                $('#error-msubject').removeClass('has-error');
            }

            if ($('#mmessage').val() == null || $('#mmessage').val() == '' || $('#mmessage').val() == undefined) {
                $('#error-mmessage').addClass('has-error');
                error = true;
            }
            else {
                $('#error-mmessage').removeClass('has-error');
            }

            if (error == true) {
                return;
            }
            $.get("/Common/SendContactUs",
                {
                    fullname: $('#fname').val(),
                    email: $('#memail').val(),
                    subject: $('#msubject').val(),
                    content: $('#mmessage').val()
                }, function (result) {
                    console.log(result)
                    if (result == true) {
                        $('#result-message').addClass('alert alert-success').html('<strong>Success!</strong> Message Send. We will contact with you soon.').delay(500).slideDown(500).delay(10000).slideUp('slow');
                        $('#fname').val("");
                        $('#memail').val("");
                        $('#msubject').val("");
                        $('#mmessage').val("");
                    } else {
                        $('#result-message').addClass('alert alert-danger').html('<strong>Error!</strong> Message Sending Error! Please try again').delay(500).slideDown(500).delay(10000).slideUp('slow');
                    }
            });
        };
  
</script>